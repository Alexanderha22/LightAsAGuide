<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.debug.DebugFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/savebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Save Session Test" />

            <Button
                android:id="@+id/btParseTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="200dp"

                android:text="Parse Received Message Test" />

        </LinearLayout>


        <Button
            android:id="@+id/getPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Get Permission" />

        <Button
            android:id="@+id/btConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Connect" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btSendSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="100dp"

                android:layout_gravity="center"
                android:text="CDR Demo" />
        </FrameLayout>
    </LinearLayout>



</FrameLayout>