<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.debug.DebugFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <Button
            android:id="@+id/savebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Save Session Test" />

        <Button
            android:id="@+id/getPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Get Permission" />

        <Button
            android:id="@+id/btConnect"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Connect" />

        <Button
            android:id="@+id/btSendSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Send Session Test" />

        <Button
            android:id="@+id/btParseTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Parse Received Message Test" />
    </LinearLayout>



</FrameLayout>